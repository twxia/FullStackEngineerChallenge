{
  "name": "client",
  "version": "0.1.0",
  "private": true,
  "dependencies": {},
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "1.x",
    "@typescript-eslint/parser": "1.x",
    "babel-eslint": "10.0.2",
    "concurrently": "^4.1.2",
    "eslint": "^6.2.2",
    "eslint-config-prettier": "^6.1.0",
    "eslint-config-react-app": "^5.0.1",
    "eslint-plugin-flowtype": "3.x",
    "eslint-plugin-import": "2.x",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^2.0.1",
    "husky": "^3.0.4",
    "lint-staged": "^9.2.3",
    "prettier": "^1.18.2",
    "typescript": "^3.5.3"
  },
  "scripts": {
    "setup:services": "cd services && sls dynamodb install && yarn && cd ..",
    "setup:client": "cd client && yarn && cd ..",
    "setup": "yarn setup:services && yarn setup:client",
    "dev:services": "cd services && sls offline start && cd ..",
    "dev:client": "cd client && yarn start && ..",
    "dev": "concurrently \"yarn dev:services\" \"yarn dev:client\"",
    "build:client": "cd client && yarn build && mv build ../ && cd .."
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json}": [
      "eslint --ignore-path .gitignore --ext .js,.jsx,.ts,.tsx .",
      "prettier --write",
      "git add"
    ]
  }
}
